<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_recipe_iv"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/babaozhou"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_recipe_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_recipe_iv"
        android:layout_marginTop="5dp"
        android:text="八宝粥"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/item_recipe_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_recipe_tv_title"
        android:layout_marginTop="35dp"
        android:text="发布时间：2022-05-18"/>
    <TextView
        android:id="@+id/item_recipe_tv_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_recipe_tv_title"
        android:layout_alignBottom="@id/item_recipe_iv"
        android:text="发布人：管理员"/>



</RelativeLayout>